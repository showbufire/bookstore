<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">  
      <h2 class="text-center page-header">Listing books</h2>
      <table class="table table-striped">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th colspan="3"></th>
	  </tr>
	</thead>

	<tbody>
	  <% @books.each do |book| %>
	  <tr>
            <td><%= book.name %></td>
            <td><%= link_to 'Show', book if can? :read, book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) if can? :update, book %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, book %></td>
	  </tr>
	  <% end %>
	</tbody>
      </table>

      <%= link_to 'New Book', new_book_path if can? :create, Book %>
      <br />
      <%= will_paginate @books, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
